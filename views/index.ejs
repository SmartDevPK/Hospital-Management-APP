<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Healthcare Dashboard</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      color: #2d3748;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    /* Header */
    .header {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 30px;
      margin-bottom: 30px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      text-align: center;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 700;
      background: linear-gradient(135deg, #667eea, #764ba2);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 10px;
    }

    .subtitle {
      color: #718096;
      font-size: 1.1rem;
      font-weight: 400;
    }

    /* Navigation */
    .nav-links {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 20px;
      flex-wrap: wrap;
    }

    .nav-link {
      display: inline-block;
      padding: 12px 24px;
      background: linear-gradient(135deg, #4299e1, #3182ce);
      color: white;
      text-decoration: none;
      border-radius: 25px;
      font-weight: 500;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(66, 153, 225, 0.3);
    }

    .nav-link:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(66, 153, 225, 0.4);
      background: linear-gradient(135deg, #3182ce, #2c5282);
    }

    /* Dashboard Grid */
    .dashboard-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 30px;
    }

    /* Section Cards */
    .section-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 30px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      animation: fadeInUp 0.6s ease forwards;
    }

    .section-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
    }

    .section-card:nth-child(1) { animation-delay: 0.1s; }
    .section-card:nth-child(2) { animation-delay: 0.2s; }
    .section-card:nth-child(3) { animation-delay: 0.3s; }

    .section-header {
      display: flex;
      align-items: center;
      margin-bottom: 25px;
      padding-bottom: 15px;
      border-bottom: 2px solid #e2e8f0;
    }

    .section-icon {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
      margin-right: 15px;
      font-weight: bold;
    }

    .doctors .section-icon {
      background: linear-gradient(135deg, #48bb78, #38a169);
      color: white;
    }

    .patients .section-icon {
      background: linear-gradient(135deg, #ed8936, #dd6b20);
      color: white;
    }

    .appointments .section-icon {
      background: linear-gradient(135deg, #9f7aea, #805ad5);
      color: white;
    }

    h2 {
      font-size: 1.5rem;
      font-weight: 600;
      color: #2d3748;
      margin: 0;
    }

    .count-badge {
      background: #edf2f7;
      color: #4a5568;
      padding: 4px 12px;
      border-radius: 15px;
      font-size: 0.9rem;
      font-weight: 500;
      margin-left: auto;
    }

    /* Lists */
    ul {
      list-style: none;
    }

    li {
      background: linear-gradient(135deg, #f7fafc, #edf2f7);
      margin: 15px 0;
      padding: 20px;
      border-radius: 15px;
      border-left: 4px solid transparent;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    li::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    li:hover::before {
      opacity: 1;
    }

    .doctors li {
      border-left-color: #48bb78;
    }

    .patients li {
      border-left-color: #ed8936;
    }

    .appointments li {
      border-left-color: #9f7aea;
    }

    li:hover {
      transform: translateX(5px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    /* Item Details */
    .item-main {
      font-weight: 600;
      font-size: 1.1rem;
      color: #2d3748;
      margin-bottom: 5px;
    }

    .item-details {
      color: #718096;
      font-size: 0.95rem;
    }

    /* Action Buttons */
    .action-buttons {
      margin-top: 15px;
      display: flex;
      gap: 10px;
    }

    .btn {
      padding: 8px 16px;
      border: none;
      border-radius: 8px;
      font-size: 0.85rem;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-block;
    }

    .btn-view {
      background: #e2e8f0;
      color: #4a5568;
    }

    .btn-view:hover {
      background: #cbd5e0;
      transform: translateY(-1px);
    }

    .btn-edit {
      background: linear-gradient(135deg, #4299e1, #3182ce);
      color: white;
    }

    .btn-edit:hover {
      background: linear-gradient(135deg, #3182ce, #2c5282);
      transform: translateY(-1px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        padding: 15px;
      }

      h1 {
        font-size: 2rem;
      }

      .dashboard-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .section-card {
        padding: 20px;
      }

      .nav-links {
        flex-direction: column;
        align-items: center;
      }

      .nav-link {
        width: 200px;
        text-align: center;
      }
    }

    /* Loading Animation */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Healthcare Dashboard</h1>
      <p class="subtitle">Manage doctors, patients, and appointments</p>

      <div class="nav-links">
        <a href="/doctors" class="nav-link">üë®‚Äç‚öïÔ∏è Manage Doctors</a>
        <a href="/addPatient" class="nav-link">üë• Manage Patients</a>
        <a href="/appointments" class="nav-link">üìÖ Appointments</a>
        <a href="/reports" class="nav-link">üìä Reports</a>
        <a href="/settings" class="nav-link">‚öôÔ∏è Settings</a>
      </div>
    </div>

    <div class="dashboard-grid">
      <section class="section-card doctors">
        <div class="section-header">
          <div class="section-icon">üë®‚Äç‚öïÔ∏è</div>
          <h2>Doctors</h2>
          <div class="count-badge"><%= doctors.length %></div>
        </div>
        <ul>
          <% doctors.forEach(function(doctor) { %>
            <li>
              <div class="item-main"><%= doctor.name %></div>
              <div class="item-details">Specialty: <%= doctor.specialty %></div>
              <div class="item-details">Contact: <%= doctor.contact %></div>
              <div class="action-buttons">
                <a href="/doctors/<%= doctor._id %>" class="btn btn-view">View</a>
                <a href="/doctors/<%= doctor._id %>/edit" class="btn btn-edit">Edit</a>
              </div>
            </li>
          <% }) %>
        </ul>
      </section>

      <section class="section-card patients">
        <div class="section-header">
          <div class="section-icon">üë•</div>
          <h2>Patients</h2>
          <div class="count-badge"><%= patients.length %></div>
        </div>
        <ul>
          <% patients.forEach(function(patient) { %>
            <li>
              <div class="item-main"><%= patient.name %></div>
              <div class="item-details">Age: <%= patient.age %></div>
              <div class="item-details">Contact: <%= patient.contact %></div>
              <div class="action-buttons">
                <a href="/patients/<%= patient._id %>" class="btn btn-view">View</a>
                <a href="/patients/<%= patient._id %>/edit" class="btn btn-edit">Edit</a>
              </div>
            </li>
          <% }) %>
        </ul>
      </section>

      <section class="section-card appointments">
        <div class="section-header">
          <div class="section-icon">üìÖ</div>
          <h2>Appointments</h2>
          <div class="count-badge"><%= appointments.length %></div>
        </div>
        <ul>
          <% appointments.forEach(function(app) { %>
            <li>
              <div class="item-main">Dr. <%= app.doctor.name %> &ndash; <%= app.patient.name %></div>
              <div class="item-details">Date: <%= app.date.toLocaleDateString() %></div>
              <div class="item-details">Time: <%= app.time %></div>
              <div class="action-buttons">
                <a href="/appointments/<%= app._id %>" class="btn btn-view">View</a>
                <a href="/appointments/<%= app._id %>/edit" class="btn btn-edit">Edit</a>
              </div>
            </li>
          <% }) %>
        </ul>
      </section>
    </div>
  </div>
</body>
</html>
